<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        xmlns:heima="http://schemas.android.com/apk/res-auto"
                                        tools:context="com.heima.googleplay.MainActivity"
                                        android:id="@+id/dl">

    <!--侧滑菜单-->
    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#00f">

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.astuetz.PagerSlidingTabStripExtends
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            heima:pstsTabTextSize="16sp"
            heima:pstsTabTextColor="@color/tab_text_normal"
            heima:pstsIndicatorColor="@color/tab_indicator_selected"
            heima:pstsSelectedTabTextColor="@color/tab_text_selected"
            heima:pstsSelectedTabTextSize="18sp">

        </com.astuetz.PagerSlidingTabStripExtends>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

    </LinearLayout>



</android.support.v4.widget.DrawerLayout>
